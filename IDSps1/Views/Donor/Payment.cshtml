@model Charity
@{
    ViewData["Title"] = "Payment";
}

<h1>Payment</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="test-primary">DONATION</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Amount</label>
            <input class="form-control" />
        </div>
        <div class="mb-3">
            <label>E-Signature</label>
            <input class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Proceed</button>
    </div>
</form>

